<form action="<%= band_albums_url(@album.band_id) %>" method="post">
    <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
    >

    <label for="album_name">Name</label>
    <input
    type="text"
    name="album[name]"
    id="album_name"
    value="<%= @album.name %>"
    >
    <br>


    <label for="album_band">Band</label>
    <select name="album[band_id]" id="album_band">
        <% Band.all.each do |band| %>
            <option
                <%= @album.band_id == band.id ? "selected" : "" %>
                value="<%= band.id %>"
            >
                <%= band.name.upcase %>
            </option>
        <% end %>
    </select>
    <br>

    <input
    type="radio"
    name="album[live]"
    value="t"
    id="album_live_t"
    <%= @album.live ? "checked" : "" %>
    >
    <label for="album_live_t">Live</label>

    <input
    type="radio"
    name="album[live]"
    value="f"
    id="album_live_f"
    <%= @album.live ? "" : "checked" %>
    >
    <label for="album_live_f">Studio</label>
    <br>

    <label for="band_year">Year</label>
    <input
    type="number"
    name="album[year]"
    id="album_year"
    value="<%= @album.year %>">
    <br>


    <input type="submit" value="Create Album!">
</form>
